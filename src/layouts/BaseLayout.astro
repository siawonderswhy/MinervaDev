---
import { ViewTransitions } from "astro:transitions"
import "../css/global.css"
import "../css/variables.css"
import "../css/typography.css"

interface Props {
  title: string
  description: string
  canonicalURL: string
  ogTitle: string
  ogImage: string
}

import { AstroFont } from "astro-font"

const { title, description, canonicalURL, ogTitle, ogImage } = Astro.props
---

<!doctype html>
<!--
	Website Designer: Siavash Asadi
    Email: siavash.asd01@gmail.com
    Creation Date: August 2024
	
    Website Developer: Siavash Asadi
    LinkedIn: https://www.linkedin.com/in/siavash-asadi/
	
Note: This website was created with a focus on user experience and accessibility. For any inquiries or collaborations, please contact me.	--><!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]--><!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]--><!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]--><!--[if gt IE 8]>      <html class="no-js"> <![endif]-->
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />

    <link
      rel="alternate"
      hreflang="x-default"
      href="https://minervastudio.co/"
    />
    <link rel="alternate" hreflang="fa" href="https://minervastudio.co/fa/" />

    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:locale:alternate" content="fa_IR" />
    <meta property="og:site_name" content="Minerva Studio" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={ogTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={title} />
    <meta name="twitter:site" content="@minervastudio" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=2"
    />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/icons/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/icons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/assets/icons/android-chrome-192x192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/icons/favicon-16x16.png"
    />
    <link rel="manifest" href="/assets/icons/site.webmanifest" />
    <link
      rel="mask-icon"
      href="/assets/icons/safari-pinned-tab.svg"
      color="#00a8a5"
    />
    <link rel="shortcut icon" href="/assets/icons/favicon.ico" />
    <meta name="apple-mobile-web-app-title" content="Minerva Studio" />
    <meta name="application-name" content="Minerva Studio" />
    <meta name="msapplication-TileColor" content="#00aba9" />
    <meta
      name="msapplication-TileImage"
      content="/assets/icons/mstile-144x144.png"
    />
    <meta
      name="msapplication-config"
      content="/assets/icons/browserconfig.xml"
    />
    <meta name="theme-color" content="#02171a" />

    <AstroFont
      config={[
        {
          name: "Afacad",
          src: [
            {
              style: "normal",
              weight: "400",
              path: "./public/assets/fonts/Quantify.ttf",
            },
          ],
          preload: true,
          display: "block",
          selector: "h1, h2, h3, h4, h5, h6",
          fallback: "sans-serif",
        },
        {
          name: "Kiona",
          src: [
            {
              weight: "400",
              style: "normal",
              path: "./public/assets/fonts/Kiona.ttf",
            },
          ],
          preload: true,
          display: "block",
          selector: "body",
          fallback: "sans-serif",
        },
      ]}
    />
    <ViewTransitions />
  </head>

  <body>
    <div id="smooth-content">
      <slot />
    </div>

    <script defer src="/js/GSAP/gsap.min.js"></script>
    <script defer src="/js/GSAP/ScrollTrigger.min.js"></script>
    <script defer src="/js/GSAP/ScrollSmoother.min.js"></script>
    <script defer src="/js/GSAP/SplitText.min.js"></script>
    <script defer src="/js/GSAP/MainAnimations.js"></script>
  </body>
</html>
